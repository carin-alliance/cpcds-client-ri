<div class='card bg-dark text-white text-center'>
  <div class='card-body'>

  <% unless @eob.adjudication.empty? %>
    <div height="500">&nbsp;</div>
    <h2>Header Level Information</h2>
      <table class='table table-striped table-dark status'>
        <colgroup>
          <col style="width:25%">
          <col style="width:25%">
          <col style="width:25%">
          <col style="width:25%">
        </colgroup>
        <thead>
          <tr> 
            <th>Type</th>
            <th>Amount</th>
            <th>Value</th>  
            <th>Reason</th> 
          </tr> 
        </thead>
        </tbody>
          <% @eob.adjudication.each do |item| %> 
            <tr class='eobitem'>
              <td><%= sanitize(item[:type]) %></td>
              <td><%= sanitize(item[:amount]) %></td>
              <td><%= sanitize(item[:value]) %></td>
              <td><%= sanitize(item[:reason]) %></td>
               </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>

    <% unless @eob.items.empty? %>
    <h2>Item Level Information</h2>
      <table class='table table-striped table-dark status'>
        <colgroup>
          <col style="width: 15%">
          <col style="width: 25%">
          <col style="width: 40%">
          <col style="width: 20%">
        </colgroup>
        <thead>
          <tr> 
            <th>Date</th> 
            <th>Location</th>
            <th>Product/Service</th>
            <th>Revenue</th> 
          </tr> 
        </thead>
        </tbody>
          <% @eob.items.each do |item| %> 
            <tr class='eobitem'>
              <td><%= sanitize(item[:startDate]) %></td>
              <td><%= sanitize(item[:location]) %></td>
              <td>
                <p>
                  <%= sanitize(item[:productOrService]) %>
                </p>
                <% if item[:adjudication].length > 0 %>
                  <p>
                    Adjudication
                  </p>
                  <table class='table table-dark'>
                    <tbody>
                      <% item[:adjudication].each do |adj| %>
                        <tr class='adjudication'>
                          <th title='<%= adj[:text]%>' data-toggle='tooltip'><%= sanitize(adj[:type]) %> :</th>
                          <td><%= sanitize(adj[:value]) %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                <% end %>
              </td>
              <td><%= sanitize(item[:revenue]) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
    
    <% unless @eob.total.empty? %>
    <div height="500">&nbsp;</div>
    <h2>Total</h2>
      <table class='table table-striped table-dark status'>
        <colgroup>
          <col style="width:20%">
          <col style="width:20%">
        </colgroup>
        <thead>
          <tr> 
            <th>Type</th>
            <th>Amount</th>
          </tr> 
        </thead>
        </tbody>
          <% @eob.total.each do |total| %> 
            <tr class='eobtotal'>
              <td><%= sanitize(total[:category]) %></td>
              <td><%= sanitize(total[:amount]) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
