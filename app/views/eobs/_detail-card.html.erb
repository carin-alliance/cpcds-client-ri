<div class='card bg-dark text-white'>
  <div class='card-body'>
  <% if @eob.items.size > 0 %>
    <table class='table table-striped table-dark status'>
      <colgroup>
        <col style="width: 15%"></col>
        <col style="width: 25%"></col>
        <col style="width: 40%"></col>
        <col style="width: 20%"></col>
      </colgroup>
      <thead>
      <tr>
      <th>Claim Items</th>
      </tr>
        <tr> 
          <th>Date</th> 
          <th>Category</th>
          <th>Product/Service</th>
          <th>Revenue</th> 
        </tr> 
      </thead>
      </tbody>
        <% @eob.items.each do |item| %> 
          <tr class='eobitem'>
            <td><%= sanitize(item[:startDate]) %></td>
            <td><%= sanitize(item[:category]) %></td>
            <td>
              <p>
                <%= sanitize(item[:productOrService]) %>
              </p>
              <% if item[:adjudication].length > 0 %>
                <p>
                  Adjudication
                </p>
                <table class='table table-dark'>
                  <tbody>
                    <tr class='adjudication'>
                      <% item[:adjudication].each do |adj| %>
                        <td><%= sanitize(adj[1]) %></td>
                      <% end %>
                    </tr>
                    <tr class='adjudication'>
                      <% item[:adjudication].each do |adj| %>
                        <td><%= sanitize(adj[0]) %></td>
                      <% end %>
                    </tr>
                  </tbody>
                </table>
              <% end %>
            </td>
            <td><%= sanitize(item[:revenue]) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
    <% if @eob.adjudication.size > 0 %>
    <table class='table table-striped table-dark status'>
    <colgroup>
      <col style="width:20%"></col>
      <col style="width:20%"></col>
      <col style="width:20%"></col>
      <col style="width:20%"></col>
      <col style="width:20%"></col>
    </colgroup>
    <thead>
    <tr>
    <th>Adjudication</th>
    </tr>
      <tr> 
        <th>Type</th>
        <th>Amount</th>
        <th>Value</th> 
        <th>Units</th> 
        <th>Reason</th> 
      </tr> 
    </thead>
    </tbody>
      <% @eob.adjudication.each do |item| %> 
        <tr class='eobitem'>
          <td><%= sanitize(item[:type]) %></td>
          <td><%= sanitize(item[:amount]) %></td>
          <td><%= sanitize(item[:value]) %></td>
          <td><%= sanitize(item[:units]) %></td>
          <td><%= sanitize(item[:reason]) %></td>
           </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
  <% if @eob.total.size > 0 %>
  <table class='table table-striped table-dark status'>
  <colgroup>
    <col style="width:30%"></col>
    <col style="width:30%"></col>
  </colgroup>
  <thead>
  <tr>
  <th>Totals</th>
  </tr>
    <tr> 
      <th>Category</th>
      <th>Amount</th>
    </tr> 
  </thead>
  </tbody>
    <% @eob.total.each do |item| %> 
      <tr class='eobitem'>
        <td><%= sanitize(item[:category]) %></td>
        <td><%= sanitize(item[:amount]) %></td>
         </tr>
    <% end %>
  </tbody>
</table>
<% end %>
  </div>
</div>
