<div class='card bg-dark text-white'>
  <div class='card-body'>
    <div class='row patient-info'>
      <div class='col-3'>
        <%= display_photo(@patient.photo, @patient.gender, class: 'profile-photo') %>
      </div>
      <div class='col-9'>
        <table class='table table-striped table-dark status'>
          <tr>
            <td>Patient:</td>
            <td><%= sanitize(@eob.claimpatient) %></td>        
          </tr>
          <tr>
            <td>Date:</td>
            <td><%= sanitize(@eob.created) %></td>        
          </tr>
          <tr>
            <td>Facility:</td>
            <td><%= sanitize(@eob.facility) %></td>        
          </tr>
          <tr>
            <td>Provider:</td>
            <td><%= sanitize(@eob.provider) %></td>        
          </tr>
          <tr>
            <td>Claim:</td>
            <td><%= sanitize(@eob.claim_reference) %></td>        
          </tr>
          <tr>
            <td>Total:</td>
            <td><%= sanitize(@eob.total.join(" ")) %></td>        
          </tr>
          <tr>
            <td>Payment:</td>
            <td><%= sanitize(@eob.payment) %></td>        
          </tr>
          <tr>
            <td>Care Team:</td>
            <td><%= sanitize(@eob.careteam.values.map{ |c| c[:name] + " (" + c[:role] + ")"}.join(",")) %></td>        
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
